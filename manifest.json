{
  "manifest_version": 3,
  "name": "OnboardX",
  "version": "1.0",
  "description": "OnboardX：一站式部署向导工具，自动检测硬件兼容性（CPU、内存、存储等），提供XDR、GPT、AI安全平台部署指南",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "OnboardX部署向导",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}